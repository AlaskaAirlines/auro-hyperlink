{
  "extends": [
    "config:base",
    ":semanticPrefixFix",
    ":separateMultipleMajorReleases",
    ":separatePatchReleases",
    ":maintainLockFilesWeekly",
    ":widenPeerDependencies"
  ],

  "groupName": "all",
  "prCreation": "status-success",

  "packageRules": [
    {
      "updateTypes": ["patch"],

      "automerge": true,
      "automergeType": "branch"
    },
    {
      "updateTypes": ["minor"],
      "matchCurrentVersion": "!/^[~^]?0/",

      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchDepTypes": ["dependencies"],
      "enabled": false
    }
  ],

  "rangeStrategy": "bump"
}
